<style>
    .jumbotron {
        background-color: #fff;
    }

    .form-control {
        border: 2px solid black;
    }
</style>

<div class="container head" style="padding: 20px 0;width: 100%;overflow-x: hidden">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">


            <form class="jumbotron" method="post" action="/users/register">


                {{#if errors}}
                    {{#each errors}}
                        <div class="alert alert-danger">{{msg}}</div>
                    {{/each}}
                {{/if}}

                <div class="row">
                    <div class="col-lg-12">
                        {{#if success_msg}}
                            <div class="alert alert-success">{{success_msg}}</div>
                        {{/if}} {{#if error_msg}}
                        <div class="alert alert-danger">{{error_msg}}</div>
                    {{/if}} {{#if error}}
                        <div class="alert alert-danger">{{error}}</div>
                    {{/if}}

                    </div>
                </div>

                <h3 class="modal-header text-left">Account Registration</h3>
                <fieldset class="form-group">
                    <div class="col-md-6">
                        <h5>First Name</h5>
                        <input type="text" class="form-control" placeholder="First Name" name="firstname" style="background-color: #fff; color: #000" required>
                    </div>
                    <div class="col-md-6">
                        <h5>Last Name</h5>
                        <input type="text" class="form-control" placeholder="Last Name" name="lastname" style="background-color: #fff; color: #000" required>
                    </div>
                    <div class="col-md-6">
                        <h5>Username</h5>
                        <input type="text" class="form-control" style="background-color: #fff;color: #000" placeholder="Username" name="username" required>
                    </div>

                    <div class="col-md-6">
                        <h5>Sex</h5>
                        <h5 class="col-md-3">Male <input type="radio" class="form-control" name="sex" value="male"></h5>
                        <h5 class="col-md-3">Female <input type="radio" class="form-control" name="sex" value="female"></h5>
                    </div>
                </fieldset>
                <fieldset class="form-group form-inline form-horizontal">
                    <h4>Contact Details</h4>
                    <div class="col-md-6">
                        <h5>Phone</h5>
                        <input type="text" class="form-control" placeholder="phone" name="phone" style="background-color: #fff; color: #000" required>
                    </div>
                    <div class="col-md-6">
                        <h5>Email</h5>
                        <input type="email" class="form-control" placeholder="Email" name="email" style="background-color: #fff; color: #000" required>
                    </div>
                </fieldset>
                <fieldset class="form-group form-inline">
                    <h4>Account</h4>
                    <div class="col-md-6">
                        <h5>Password</h5>
                        <input type="password" class="form-control" placeholder="Password" name="password" style="background-color: #fff; color: #000" required>
                    </div>
                    <div class="col-md-6">
                        <h5>Confirm Password</h5>
                        <input type="password" class="form-control" placeholder="Confirm Password" name="password2" style="background-color: #fff; color: #000" required>
                    </div>
                </fieldset>
                <button type="submit" class="btn btn-success" style="width: 100%">Submit</button>
            </form>
        </div>
    </div>
</div>